<div class="container" style="display:flex; justify-content: center">
  <fieldset
    style="border: 1px solid #000; padding: 10px; border-radius: 10px; width: 30vw; margin-top: 30px"
  >
    <legend style="font-size: 27px;text-align:center">Sala de Chat</legend>

    <div style="display: flex; justify-content: center; align-items:center">
      <input
        style="border-radius: 3px; height: 33px; font-size: 16px; margin-right: 10px"
        type="text"
        id="chatBox"
      />
      <button
        style="width: 120px; height: 33px; border-radius: 5px; font-size: 17px; background-color: red; color: white; border-color: white"
        id="clearChat"
      >Vaciar chat</button>
    </div>
    <div>
      <p style="font-size: 20px " id="messageLogs"></p>
    </div>
  </fieldset>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/message.js"></script>